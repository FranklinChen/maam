author:              David Darais
build-type:          Simple
cabal-version:       >=1.10
category:            Language
license-file:        LICENSE
license:             BSD3
maintainer:          david.darais@gmail.com
name:                maam
synopsis:            Monadic Abstract Interpretation
version:             0.1.0.0

library
  hs-source-dirs:      src
  exposed-modules:     FP
                     , FP.Console
                     , FP.Core
                     , FP.DerivingLens
                     , FP.DerivingPrism
                     , FP.Free
                     , FP.GHCI
                     , FP.Monads
                     , FP.Parser
                     , FP.Pretty
                     , FP.TH
                     , MAAM
                     , MAAM.Classes
                     , MAAM.Classes.AAM
                     , MAAM.Classes.MonadStep
                     , MAAM.Classes.Temporal
                     , MAAM.Instances
                     , MAAM.Instances.AAM
                     , MAAM.Instances.MonadStep
                     , MAAM.Instances.Temporal
                     -- , Examples
                     -- , Lang.Lam
                     -- , Lang.Lam.Analyses
                     -- , Lang.Lam.CPS.Classes.Delta
                     -- , Lang.Lam.CPS.Instances.Delta
                     -- , Lang.Lam.CPS.Instances.Monads
                     -- , Lang.Lam.CPS.Instances.PrettySyntax
                     -- , Lang.Lam.CPS.MonadicSemantics
                     -- , Lang.Lam.CPS.Syntax
                     -- , Lang.Lam.Instances.PrettySyntax
                     -- , Lang.Lam.Parser
                     -- , Lang.Lam.Passes.A_Stamp
                     -- , Lang.Lam.Passes.B_CPSConvert
                     -- , Lang.Lam.Syntax
  build-depends:       base
                     , containers
                     , text
                     , template-haskell
                     , directory
                     , Cabal
  default-language:    Haskell2010
  ghc-options:         -Wall -fno-warn-amp -fno-warn-orphans -isrc
  default-extensions:  ConstraintKinds
                     , ExplicitNamespaces
                     , FlexibleContexts
                     , FlexibleInstances
                     , FunctionalDependencies
                     , GADTs
                     , GeneralizedNewtypeDeriving
                     , ImpredicativeTypes
                     , InstanceSigs
                     , LambdaCase
                     , MultiParamTypeClasses
                     , NoImplicitPrelude
                     , OverloadedStrings
                     , PolyKinds
                     , PostfixOperators
                     , RankNTypes
                     , RebindableSyntax
                     , RebindableSyntax
                     , ScopedTypeVariables
                     , StandaloneDeriving
                     , TupleSections
                     , TypeFamilies
                     , TypeOperators
                     , TypeSynonymInstances
                     , UndecidableInstances
                     , ViewPatterns
                     , DataKinds
                     , TemplateHaskell

executable runquals
  build-depends: maam == 0.1.*
  main-is: src/Main.hs
  ghc-options: -Wall
  default-extensions: NoImplicitPrelude
  default-language: Haskell2010
