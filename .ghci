:set +m

let ll_cmd = do
      e <- System.Environment.getEnvironment
      return $ case lookup "GHCI_LOAD" e of 
        Nothing -> ""
        Just f -> ":load " ++ f ++ " \n :script .reload.ghci"

:def ll (const ll_cmd)

let rl_cmd = return $ ":re \n :script .reload.ghci"

:def rl (const rl_cmd)

:script .ghc_options.ghci
:script .extensions.ghci
